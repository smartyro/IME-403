{
  "name": "WalletWatchdog",
  "version": "1.0",
  "description": "Describe your extension here.",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "manifest_version": 3,
  "browser_action": {
		"default_icon": "resized-2-2.svg",
		"default_popup": "popup.html",
		"default_title": "Wallet Watchdog"
	},
}
