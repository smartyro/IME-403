{
  "name": "WalletWatchdog",
  "version": "1.0",
  "description": "Money-saving application to curb impulse buying.",
  "permissions": ["activeTab", "storage", "notifications"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "snoopy48.png",
    "128": "snoopy.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Wallet Watchdog",
    "default_icon": "snoopy.png"
  }
}
